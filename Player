using UnityEngine;
using UnityEngine.Events;

public class Player : MonoBehaviour
{
    [SerializeField] private int _maxHealth;

    private int _currentHealth;
    private int _changedHealth;

    public event UnityAction<int,int,int> HealthChanged;

    private void Start()
    {
        _currentHealth = _maxHealth;
    }

    public void Heal()
    {
        ChangeCurrentHealth(10);
    }

    public void Damage()
    {
        ChangeCurrentHealth(-10);
    }

    private void ChangeCurrentHealth (int value)
    {
        _changedHealth = _currentHealth;
        _currentHealth = _currentHealth + value;

        Mathf.Clamp(_currentHealth, 0, 100);

        HealthChanged?.Invoke(value, _changedHealth, _maxHealth)
    }
}
